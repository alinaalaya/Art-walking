</main>

<script>
  // –ù–∞–≤–∏–≥–∞—Ü–∏—è –ø–æ –±–ª–æ–∫–∞–º
  const navLinks = document.querySelectorAll(".nav-link");
  const contentBlocks = document.querySelectorAll(".content-block");

  function openBlock(id) {
    contentBlocks.forEach(b => {
      b.classList.toggle("active", b.id === id);
    });
    navLinks.forEach(l => {
      if (l.dataset.target === id) {
        l.classList.add("active");
      } else if (l.dataset.target) {
        l.classList.remove("active");
      }
    });
  }

  navLinks.forEach(link => {
    link.addEventListener("click", () => {
      const target = link.dataset.target;
      if (target) openBlock(target);
    });
  });

  document.querySelectorAll("[data-open-block]").forEach(btn => {
    btn.addEventListener("click", () => {
      openBlock(btn.dataset.openBlock);
      window.scrollTo({ top: document.querySelector("header").offsetHeight, behavior: "smooth" });
    });
  });
</script>
</body>
</html>
